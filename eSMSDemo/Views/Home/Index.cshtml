@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-4">
        <h2>Gửi SMS</h2>
        <form action="/Home/SendSMS">
            <div class="form-group">
                <label>Gửi đến: </label>
                <input class="form-control" name="phone" placeholder="Nhập số điện thoại..."/>
            </div>
            <div class="form-group">
                <label>Nội dung: </label>
                <textarea class="form-control" name="content" placeholder="Nhập số điện thoại..."></textarea>
            </div>
            <button>Gửi tin nhắn</button>
            @if (TempData["Result"] != null)
            {
                <p class="mt-2">@TempData["Result"]</p>
            }
        </form>
    </div>
